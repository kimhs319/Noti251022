<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 권한 요청 버튼 -->
        <Button
            android:id="@+id/permissionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="권한 요청"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="24dp" />

        <!-- 온수기 알림 설정 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자동 알림 설정"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="온수기 알림"
                android:textSize="16sp" />
            
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/waterHeaterSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="평일 18:00, 토요일 12:00에 MGKH에게 알림"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="24dp" />

        <!-- 센더 설정 제목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="텔레그램 센더 설정"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- 센더 입력 필드 컨테이너 -->
        <LinearLayout
            android:id="@+id/senderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- 저장 버튼 -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="24dp" />

        <!-- 로그 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="앱 로그"
                android:textSize="18sp"
                android:textStyle="bold" />
            
            <Button
                android:id="@+id/clearLogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지우기"
                style="?android:attr/buttonBarButtonStyle" />
            
            <Button
                android:id="@+id/copyLogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="복사"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>

        <!-- 로그 표시 영역 -->
        <TextView
            android:id="@+id/logTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:textColor="#333333"
            android:scrollbars="vertical"
            android:text="로그가 여기에 표시됩니다..." />

    </LinearLayout>

</ScrollView>